{
  "name": "@atomic-fhir/core",
  "version": "0.1.0",
  "description": "Core framework for Atomic FHIR - a FHIR-native web framework",
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "types": "./src/index.ts"
    }
  },
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "fhir",
    "healthcare",
    "framework",
    "atomic",
    "bun"
  ],
  "author": "Atomic FHIR Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/atomic-fhir/framework.git",
    "directory": "packages/core"
  },
  "bugs": {
    "url": "https://github.com/atomic-fhir/framework/issues"
  },
  "homepage": "https://github.com/atomic-fhir/framework#readme",
  "dependencies": {
    "@atomic-ehr/fhir-canonical-manager": "^0.0.11"
  },
  "peerDependencies": {
    "bun": ">=1.0.0"
  },
  "engines": {
    "bun": ">=1.0.0",
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "bun build:ts",
    "build:ts": "tsc",
    "dev": "tsc --watch",
    "test": "bun test",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write 'src/**/*.ts'",
    "prepublishOnly": "bun run build && bun test"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^20.0.0",
    "@types/tar": "^6.1.13",
    "bun-types": "latest",
    "typescript": "^5.3.0"
  }
}