{
  "name": "@atomic-fhir/core",
  "version": "0.1.0",
  "description": "Core framework for Atomic FHIR - a FHIR-native web framework",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./atomic": {
      "import": "./dist/core/atomic.js",
      "types": "./dist/core/atomic.d.ts"
    },
    "./resource": {
      "import": "./dist/core/resource.js",
      "types": "./dist/core/resource.d.ts"
    },
    "./operation": {
      "import": "./dist/core/operation.js",
      "types": "./dist/core/operation.d.ts"
    },
    "./middleware": {
      "import": "./dist/core/middleware.js",
      "types": "./dist/core/middleware.d.ts"
    },
    "./hook": {
      "import": "./dist/core/define-hook.js",
      "types": "./dist/core/define-hook.d.ts"
    },
    "./storage": {
      "import": "./dist/storage/storage-manager.js",
      "types": "./dist/storage/storage-manager.d.ts"
    },
    "./adapters/sqlite": {
      "import": "./dist/storage/sqlite-adapter.js",
      "types": "./dist/storage/sqlite-adapter.d.ts"
    }
  },
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "fhir",
    "healthcare",
    "framework",
    "atomic",
    "bun"
  ],
  "author": "Atomic FHIR Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/atomic-fhir/framework.git",
    "directory": "packages/core"
  },
  "bugs": {
    "url": "https://github.com/atomic-fhir/framework/issues"
  },
  "homepage": "https://github.com/atomic-fhir/framework#readme",
  "dependencies": {
    "tar": "^6.2.0",
    "node-fetch": "^3.3.2"
  },
  "peerDependencies": {
    "bun": ">=1.0.0"
  },
  "engines": {
    "bun": ">=1.0.0",
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "bun build:ts",
    "build:ts": "tsc",
    "dev": "tsc --watch",
    "test": "bun test",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write 'src/**/*.ts'",
    "prepublishOnly": "bun run build && bun test"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^20.0.0",
    "@types/tar": "^6.1.13",
    "bun-types": "latest",
    "typescript": "^5.3.0"
  }
}