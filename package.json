{
  "name": "@atomic/framework",
  "version": "0.1.0",
  "description": "FHIR-native web framework for JavaScript/Bun",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "dev": "bun run src/server.js",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write '**/*.{js,json,md}'",
    "format:check": "prettier --check '**/*.{js,json,md}'",
    "check": "bun run check:syntax && bun run lint && bun run test",
    "check:syntax": "node scripts/check-syntax.js",
    "validate": "bun run scripts/validate.js",
    "setup": "bun run scripts/setup.js",
    "example:minimal": "cd examples/minimal-server && bun run dev",
    "example:basic": "cd examples/basic-server && bun run dev",
    "example:us-core": "cd examples/us-core-server && bun run dev",
    "prepare": "husky install"
  },
  "dependencies": {
    "bun": "latest"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "eslint": "^8.56.0",
    "prettier": "^3.2.4",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "keywords": [
    "fhir",
    "healthcare",
    "framework",
    "bun",
    "atomic",
    "hl7",
    "interoperability"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "bun": ">=1.0.0"
  }
}